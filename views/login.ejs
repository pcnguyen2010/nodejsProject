<html lang="us">
<%- include('./include/header.ejs') %>
<body>
    <%- include('./include/top.ejs')  %>
    <%- include('./include/center_left_nav.ejs')  %>
    <div class="central-brief-message"></div>
    <form action="/login" method="post">
        <div class="central-form">
            <% if(err) { %>
                <div>
                    <label style="color: red;"><%= err %></label>
                </div>
                <div></div>
            <% } %>
            <div>
                <label>Your Email: </label>
            </div>
            <div>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <label>Password: </label>
            </div>
            <div>
                <input type="password" id="password" name="password" required>
            </div>
            <div>
                <label></label>
            </div>
            <div>
                <input style="background-color: var(--button-background-color);" type="submit" value="Login">
            </div>
            <div>
                <a href="/register" class="button"><button type="button" style="color:white;background-color: var(--button-background-color);border-radius: 20px;">Register</button></a>
            </div>
        </div>
    </form>
    <%- include('./include/termAgreement.ejs') %>
</body>
</html>